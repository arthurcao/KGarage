<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.dinh.kgarage.SetTimeAuthorizationsActivity">

        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="User" />

        <TextView
            android:gravity="center"
            android:id="@+id/set_time_user"
            android:text="Mail:User"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TableRow
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="Forever"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/set_time_forever"
                android:layout_gravity="center_horizontal" />
        </TableRow>

        <TableRow
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="Auth notify"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/set_time_auth_notify"
                android:layout_gravity="center_horizontal" />
        </TableRow>

        <TableRow
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="Notify"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/set_time_notify"
                android:layout_gravity="center_horizontal" />
        </TableRow>

        <TextView
            android:background="@android:color/darker_gray"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="From"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <DatePicker
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set_time_from_datePicker" />

        <TextView
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TimePicker
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:timePickerMode="spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set_time_from_timePicker" />

        <TableRow
            android:visibility="gone"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/set_time_from_date"
                android:onClick="setDateFrom"
                android:clickable="true"
                android:background="@android:color/darker_gray"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="2015/05/18"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/set_time_from_time"
                android:onClick="setTimeFrom"
                android:clickable="true"
                android:background="@android:color/darker_gray"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="3:00 PM"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </TableRow>

        <TextView
            android:background="@android:color/darker_gray"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="To"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <DatePicker
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set_time_to_datePicker" />

        <TextView
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TimePicker
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:timePickerMode="spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set_time_to_timePicker" />
        <TableRow
            android:visibility="gone"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/set_time_to_date"
                android:clickable="true"
                android:background="@android:color/darker_gray"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="2015/05/18"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/set_time_to_time"
                android:clickable="true"
                android:background="@android:color/darker_gray"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1"
                android:text="3:00 PM"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </TableRow>
    </LinearLayout>
</ScrollView>